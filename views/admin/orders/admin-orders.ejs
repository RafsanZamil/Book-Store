<%- include('../../partials/admin-navbar') %>
<!-- views/admin-orders.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Admin Orders</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }

    h1 {
      text-align: center;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      padding: 8px;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #f2f2f2;
    }

    tr:hover {
      background-color: #f5f5f5;
    }

    ul {
      margin: 0;
      padding-left: 20px;
    }

    form {
      display: inline-block;
    }

    select {
      margin-right: 10px;
    }

    button {
      padding: 5px 10px;
      background-color: #4CAF50;
      color: white;
      border: none;
      cursor: pointer;
      border-radius: 4px;
    }

    button:hover {
      background-color: #45a049;
    }
  </style>
</head>
<body>
  <h1>Admin Orders</h1>
  <table>
    <thead>
      <tr>
        <th>Order ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Items</th>
        <th>Total Price</th>
        <th>Status</th>
        <th>Change Status</th>
      </tr>
    </thead>
    <tbody>
      <% orders.forEach((order) => { %>
        <tr>
          <td><%= order._id %></td>
          <td><%= order.name %></td>
          <td><%= order.email %></td>
          <td><%= order.address %></td>
          <td><%= order.items%></td>
          <!-- <td>
            < <ul>
              <% order.items.forEach((item) => { %>
                <li><%= item.name %> - <%= item.price %></li>
              <% }) %>
            </ul> 
          </td> -->
          <td><%= order.totalPrice %></td>
          <td><%= order.status %></td>
          <td>
            <form action="/admin/orders/<%= order._id %>/update" method="post">
              <select name="status">
                <option value="pending" <% if (order.status === "pending") { %> selected <% } %>>Pending</option>
                <option value="delivered" <% if (order.status === "delivered") { %> selected <% } %>>Delivered</option>
              </select>
              <button type="submit">Update</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
